# PromptOps Docker Environment Variables Example
# Copy this file to .env and update with your values

# =====================================
# PromptOps Configuration
# =====================================
PROMPTOPS_API_URL=http://localhost:8000
PROMPTOPS_API_KEY=your-api-key-here

# =====================================
# Database Configuration
# =====================================
POSTGRES_USER=promptops
POSTGRES_PASSWORD=your-postgres-password-here
DATABASE_URL=postgresql://promptops:your-postgres-password-here@postgres:5432/promptops

# =====================================
# Redis Configuration
# =====================================
REDIS_URL=redis://:your-redis-password-here@redis:6379
REDIS_PASSWORD=your-redis-password-here

# =====================================
# Application Configuration
# =====================================
SECRET_KEY=your-secret-key-here
DEBUG=false
LOG_LEVEL=INFO

# =====================================
# Google OAuth Configuration (Optional)
# =====================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# =====================================
# GitHub OAuth Configuration (Optional)
# =====================================
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:8000/auth/github/callback

# =====================================
# Policy Engine Configuration
# =====================================
OPA_URL=http://opa:8181

# =====================================
# Application Configuration
# =====================================
APP_NAME=PromptOps Registry
APP_VERSION=1.0.0

# =====================================
# CORS Configuration
# =====================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# =====================================
# Cache Configuration
# =====================================
CACHE_TTL=3600

# =====================================
# Security Configuration
# =====================================
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =====================================
# Monitoring and Metrics Configuration
# =====================================
OPENTELEMETRY_ENABLED=false
OPENTELEMETRY_ENDPOINT=http://localhost:4317

# =====================================
# Grafana Configuration (Production)
# =====================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-grafana-password-here

# =====================================
# Docker Registry Configuration
# =====================================
DOCKER_REGISTRY=promptops
DOCKER_USERNAME=your-docker-username
DOCKER_PASSWORD=your-docker-password

# =====================================
# Build Configuration
# =====================================
VERSION=latest
ENVIRONMENT=development

# =====================================
# Email Configuration (Optional)
# =====================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@promptops.ai

# =====================================
# Rate Limiting Configuration
# =====================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# =====================================
# Performance Configuration
# =====================================
MAX_WORKERS=4
TIMEOUT=30
KEEP_ALIVE=5
MAX_CONNECTIONS=100